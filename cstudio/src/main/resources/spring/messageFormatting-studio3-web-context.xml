<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

   <!--Message Formatter Manager -->
    <bean id="messageFormatterManager"
          class="org.craftercms.studio3.web.support.message.impl.MessageFormatterManagerImpl"/>

    <!--Parent for all Message Formtatters-->
    <bean id="messageFormatter" abstract="true" init-method="register"
          class="org.craftercms.studio3.web.support.message.AbstractExceptionMessageFormatter">
        <property name="messageFormatterManager" ref="messageFormatterManager"/>
    </bean>


</beans>